<Window x:Class="RacingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="840"
        WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" WindowStyle="None">
    <Grid Height="655">
        <Canvas x:Name="cnv">
            <Image x:Name="bg_img_down" Height="650" Width="826" Source="/bg.png" HorizontalAlignment="Center" Canvas.Top="0" VerticalAlignment="Top"/>
            <Image x:Name="bg_img_up" Height="650" Width="826" Source="/bg.png" HorizontalAlignment="Center" Canvas.Top="-640" VerticalAlignment="Top"/>
            <Image x:Name="car" Height="128" Width="128" Source="/car_1.png" HorizontalAlignment="Center" Canvas.Left="542" Canvas.Top="495" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Window>
